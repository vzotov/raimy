# OpenAI API Key
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google OAuth Configuration
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Secret for token signing
# Generate a secure random string (e.g., using openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# Service API Key for agent authentication
# Generate a secure random string (e.g., using openssl rand -hex 32)
SERVICE_API_KEY=your_service_api_key_here

# Optional: Enable debug logging for auth service (true/false)
AUTH_DEBUG=false

# API URL for OAuth callback (REQUIRED for OAuth to work)
# For local development: http://localhost:8000
# In production: Set to your actual domain (e.g., https://yourdomain.com)
# IMPORTANT: This must be the external URL that users access in their browser,
# NOT the Docker internal service name (raimy-api:8000)
API_URL=http://localhost:8000

# PostgreSQL Database Configuration
# These are used for local development with Docker
POSTGRES_DB=raimy
POSTGRES_USER=raimy_user
POSTGRES_PASSWORD=raimy_password

# Database Migration Settings
# AUTO_MIGRATE=true                    # Automatically run migrations on startup (default: true)
# FAIL_ON_MIGRATION_ERROR=false       # Fail startup if migrations fail (default: false for dev)

# LangSmith Configuration (optional, for debugging LangChain/LangGraph agents)
# Get your API key from https://smith.langchain.com/
 LANGCHAIN_TRACING_V2=true           # Enable LangSmith tracing (default: false)
 LANGCHAIN_API_KEY=                  # Your LangSmith API key
 LANGCHAIN_PROJECT=raimy-agent       # Project name in LangSmith (default: raimy-agent)