# OpenAI API Key
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# LiveKit Configuration
# Get these from your LiveKit Cloud dashboard or self-hosted instance
LIVEKIT_URL=your_livekit_url_here
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# Google OAuth Configuration
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Secret for token signing
# Generate a secure random string (e.g., using openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# Service API Key for agent authentication
# Generate a secure random string (e.g., using openssl rand -hex 32)
SERVICE_API_KEY=your_service_api_key_here

# Optional: Enable debug logging for auth service (true/false)
AUTH_DEBUG=false

# Optional: API URL for OAuth callback (defaults to http://localhost:8000)
# In production, set this to your domain (e.g., https://yourdomain.com)
API_URL=http://localhost:8000

# PostgreSQL Database Configuration
# These are used for local development with Docker
POSTGRES_DB=raimy
POSTGRES_USER=raimy_user
POSTGRES_PASSWORD=raimy_password

# Database Migration Settings
# AUTO_MIGRATE=true                    # Automatically run migrations on startup (default: true)
# FAIL_ON_MIGRATION_ERROR=false       # Fail startup if migrations fail (default: false for dev)