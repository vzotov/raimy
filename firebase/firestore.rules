rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to recipes collection
    match /recipes/{recipeId} {
      allow read, write: if true; // For development - in production, add proper auth rules
    }
    
    // Allow read/write access to user_recipes collection
    match /user_recipes/{userId} {
      allow read, write: if true; // For development - in production, add proper auth rules
    }
  }
} 